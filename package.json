{
  "name": "my-downloader",
  "version": "1.0.0",
  "description": "This program will be used to download file from multiple sources and protocol to local disk",
  "main": "index.js",
  "scripts": {
    "start": "node -r ts-node/register ./src/index.ts",
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "test": "jest --watch"
  },
  "author": "Chayanont Vongsiripat",
  "license": "MIT",
  "dependencies": {
    "cli-progress": "^3.6.0",
    "lodash": "^4.17.15",
    "module-alias": "^2.2.2",
    "node-fetch": "^2.6.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.4.2",
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^13.7.4",
    "@types/node-fetch": "^2.5.4",
    "@types/uuid": "^3.4.7",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  },
  "_moduleAliases": {
    "@modules": "src/modules",
    "@services": "src/services",
    "@libs": "src/libs"
  }
}
