{
  "name": "my-downloader",
  "version": "1.0.0",
  "description": "This program will be used to download file from multiple sources and protocol to local disk",
  "main": "index.js",
  "scripts": {
    "start": "node -r ts-node/register ./src/index.ts",
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json"
  },
  "author": "Chayanont Vongsiripat",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.15",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^13.7.4",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  },
  "_moduleAliases": {
    "@modules": "src/modules",
    "@services": "src/services"
  }
}